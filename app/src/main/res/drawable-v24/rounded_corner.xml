<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/ripple_material_dark">
    <item android:id="@android:id/mask">   <!--for click effect -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="@dimen/dimen_8" />
        </shape>
    </item>

    <item android:id="@android:id/background"> <!--for background effect -->
        <shape android:shape="rectangle">
            <solid android:color="@color/white_bg" />
            <corners android:radius="@dimen/dimen_25" />
            <stroke
                android:width="@dimen/dimen_1"
                android:color="@color/colorPrimary" />
        </shape>
    </item>
</ripple>
