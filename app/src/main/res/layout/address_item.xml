<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/dimen_1"
    android:padding="@dimen/dimen_1"
    tools:context=".SearchPlaceActivity"
    tools:showIn="@layout/activity_search_place">

    <ImageView
        android:id="@+id/iv_fav"
        android:layout_width="@dimen/dimen_25"
        android:layout_height="@dimen/dimen_25"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dimen_10"
        android:background="@null"
        android:visibility="gone"
        android:src="@drawable/ic_favorite_blank_24dp" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="@dimen/dimen_5"
        android:layout_toStartOf="@+id/iv_fav"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_primary_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_10"
            android:singleLine="true"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_secondary_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_10"
            android:layout_marginBottom="@dimen/dimen_5"
            android:singleLine="true"
            android:textAppearance="?attr/textAppearanceListItemSecondary" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_alignParentBottom="true"
        android:background="@color/light_gray" />

</RelativeLayout>